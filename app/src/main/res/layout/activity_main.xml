<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chinese"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/selectedFoodTxt" android:textSize="30sp"
            android:fontFamily="@font/muli_bold"/>
    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp" app:srcCompat="@drawable/dd_logo"
            android:id="@+id/imageView" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <Button
            android:text="DECIDE!"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/decideBtn" android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/Widget.AppCompat.Button.Borderless" android:textSize="18sp"
            android:textColor="@android:color/background_light" android:fontFamily="@font/muli_bold"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addFoodTxt"
            android:fontFamily="@font/muli_bold" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/selectedFoodTxt" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:hint="add new food..."
            android:layout_marginBottom="4dp" app:layout_constraintBottom_toTopOf="@+id/addFoodBtn"
            style="@style/Widget.AppCompat.AutoCompleteTextView"/>
    <Button
            android:text="Add Food"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:id="@+id/addFoodBtn" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/muli_bold" android:textColor="@android:color/background_light"
            android:background="@color/colorPrimary" style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toTopOf="@+id/decideBtn"
    />

</android.support.constraint.ConstraintLayout>